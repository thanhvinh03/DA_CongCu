@model IEnumerable<FoodStore.Models.FoodCategory>

@{
    Layout = "_LayoutEmployee";
}

<h1>Quản lý loại món ăn</h1>


<p>
    <a asp-action="Add" class="btn btn-info">Thêm loại món ăn</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên loại thực phẩm
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a> |
                    <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-success"><i class="fa-solid fa-circle-info"></i></a> |
                    
            </td>
        </tr>
}
    </tbody>
</table>
