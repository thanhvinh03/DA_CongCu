@model FoodStore.Models.Food

@{
    ViewData["Title"] = "Display";
    Layout = "~/Areas/Employee/Views/Shared/_LayoutEmployee.cshtml";
}

<h1>Chi tiết món ăn @Model.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Loại thực phẩm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FoodCategorys.Name)
        </dd>
        <dt class = "col-sm-2">
            Tên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Hình ảnh
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Image" alt="" style="max-width: 100px; max-height: 100px;">
        </dd>
        <dt class = "col-sm-2">
            Đơn vị tính
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            Giá
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Tình trạng
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Status == 1)
            {
                <text>Hết</text>
            }
            else
            {
                <text>Còn</text>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model?.Id" class="btn btn-primary">Chỉnh sửa</a> |
    <a asp-action="Index" class="btn btn-info">Trở về</a>
</div>
