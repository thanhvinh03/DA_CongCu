@model FoodStore.Models.Buffet

@{
    ViewData["Title"] = "Xóa Buffet";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger">
    <strong>Cảnh báo!</strong> Bạn đang muốn xóa buffet <strong>@Model.Name</strong>. Hành động này không thể hoàn tác.
</div>

<div>
    <h4>Thông tin Buffet</h4>
    <dl class="row">
        <dt class="col-sm-2">Tên Buffet</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Mô Tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Xóa Buffet</button>
    <a href="@Url.Action("Index", "Buffet")" class="btn btn-secondary">Hủy bỏ</a>
</form>
