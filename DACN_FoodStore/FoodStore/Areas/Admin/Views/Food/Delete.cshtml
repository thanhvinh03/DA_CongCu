@model FoodStore.Models.Food

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h1>Bạn có muốn xóa @Model.Name?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên loại thực phẩm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FoodCategorys.Name)
        </dd>
        <dt class = "col-sm-2">
           Tên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
           Hình ảnh
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Image" alt="" style="max-width: 100px; max-height: 100px;">
        </dd>
        <dt class = "col-sm-2">
            Đơn vị tính
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            Giá
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Tình trạng
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Status == 1)
            {
                <text>Hết</text>
            }
            else
            {
                <text>Còn</text>
            }
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" style="margin-top: 10px;">Xóa</button>
        <a asp-action="Index" class="btn btn-info" style="margin-top: 10px;">Trở về</a>
    </form>
</div>
