@model FoodStore.Models.Table

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h1>Are you sure you want to delete this?</h1>
<div>
    <h4>Table</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Status == 1)
            {
                <text>Đã có khách</text>
            }
            else
            {
                <text>Trống</text>
            }
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" style="margin-top: 10px;">Xóa</button>
        <a asp-action="Index" class="btn btn-info" style="margin-top: 10px;">Trở về</a>
    </form>
</div>
