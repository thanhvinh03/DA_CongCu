@model IEnumerable<FoodStore.Models.Payment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Cashier/Views/Shared/_LayoutCashier.cshtml";
}

<h1>Quản lý hình thức thanh toán</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Mã hình thức
            </th>
            <th>
                Tên
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-success"><i class="fa-solid fa-circle-info"></i></a> 
            </td>
        </tr>
}
    </tbody>
</table>
